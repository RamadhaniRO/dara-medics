# Production Environment Configuration
# Copy this file to .env.production for production deployment

# Application Environment
NODE_ENV=production
PORT=3000

# Base URLs (Update these with your actual production URLs)
BASE_URL=https://api.your-domain.com
FRONTEND_URL=https://your-domain.com

# CORS Configuration
CORS_ORIGIN=https://your-domain.com
ENABLE_CORS=true

# Supabase Configuration (Use your production Supabase project)
SUPABASE_URL=https://your-production-project.supabase.co
SUPABASE_ANON_KEY=your_production_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_production_service_role_key

# Authentication Configuration
JWT_SECRET=your_production_jwt_secret_key_make_it_very_long_and_secure
JWT_EXPIRES_IN=24h
JWT_ISSUER=https://api.your-domain.com
JWT_AUDIENCE=https://your-domain.com

# Email Verification Settings (Enable for production)
ENABLE_EMAIL_CONFIRMATION=true
SKIP_EMAIL_VERIFICATION=false

# Security Settings (Enable for production)
ENABLE_RATE_LIMIT=true
ENABLE_HTTPS=true
SESSION_SECRET=your_production_session_secret_key

# Development Settings (Disable for production)
DEBUG_MODE=false
MOCK_AUTH=false

# WhatsApp Business API (Production credentials)
WHATSAPP_API_TOKEN=your_production_whatsapp_token
WHATSAPP_PHONE_NUMBER_ID=your_production_phone_number_id
WHATSAPP_BUSINESS_ACCOUNT_ID=your_production_business_account_id
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_production_webhook_token

# LLM Configuration
LLM_PROVIDER=huggingface
HUGGINGFACE_MODEL=microsoft/DialoGPT-medium
HUGGINGFACE_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# OpenAI Configuration (if using OpenAI instead)
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002

# Payment Gateway Configuration
MPESA_CONSUMER_KEY=your_production_mpesa_consumer_key
MPESA_CONSUMER_SECRET=your_production_mpesa_consumer_secret
MPESA_PASSKEY=your_production_mpesa_passkey
MPESA_BUSINESS_SHORTCODE=your_production_mpesa_shortcode

# File Storage
STORAGE_PROVIDER=s3
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_production_email@gmail.com
SMTP_PASS=your_production_email_password

# Logging
LOG_LEVEL=info
LOG_FILE=logs/dara-medics-production.log

# Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Performance
ENABLE_CACHING=true
CACHE_TTL_SECONDS=3600
ENABLE_COMPRESSION=true
ENABLE_HTTP2=true

# Error Reporting
ENABLE_ERROR_REPORTING=true
ERROR_REPORTING_SERVICE=sentry
SENTRY_DSN=your_production_sentry_dsn

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_MONITORING_SERVICE=newrelic
NEW_RELIC_LICENSE_KEY=your_production_newrelic_key
