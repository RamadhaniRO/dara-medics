# Staging Environment Configuration
# Copy this file to .env.staging for staging deployment

# Application Environment
NODE_ENV=staging
PORT=3000

# Base URLs (Update these with your actual staging URLs)
BASE_URL=https://staging-api.your-domain.com
FRONTEND_URL=https://staging.your-domain.com

# CORS Configuration
CORS_ORIGIN=https://staging.your-domain.com
ENABLE_CORS=true

# Supabase Configuration (Use your staging Supabase project)
SUPABASE_URL=https://your-staging-project.supabase.co
SUPABASE_ANON_KEY=your_staging_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_staging_service_role_key

# Authentication Configuration
JWT_SECRET=your_staging_jwt_secret_key
JWT_EXPIRES_IN=24h
JWT_ISSUER=https://staging-api.your-domain.com
JWT_AUDIENCE=https://staging.your-domain.com

# Email Verification Settings (Enable for staging)
ENABLE_EMAIL_CONFIRMATION=true
SKIP_EMAIL_VERIFICATION=false

# Security Settings (Enable for staging)
ENABLE_RATE_LIMIT=true
ENABLE_HTTPS=true
SESSION_SECRET=your_staging_session_secret_key

# Development Settings (Disable for staging)
DEBUG_MODE=false
MOCK_AUTH=false

# WhatsApp Business API (Staging credentials)
WHATSAPP_API_TOKEN=your_staging_whatsapp_token
WHATSAPP_PHONE_NUMBER_ID=your_staging_phone_number_id
WHATSAPP_BUSINESS_ACCOUNT_ID=your_staging_business_account_id
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_staging_webhook_token

# LLM Configuration
LLM_PROVIDER=huggingface
HUGGINGFACE_MODEL=microsoft/DialoGPT-medium
HUGGINGFACE_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Payment Gateway Configuration (Test credentials)
MPESA_CONSUMER_KEY=your_staging_mpesa_consumer_key
MPESA_CONSUMER_SECRET=your_staging_mpesa_consumer_secret
MPESA_PASSKEY=your_staging_mpesa_passkey
MPESA_BUSINESS_SHORTCODE=your_staging_mpesa_shortcode

# File Storage
STORAGE_PROVIDER=s3
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_staging_email@gmail.com
SMTP_PASS=your_staging_email_password

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/dara-medics-staging.log

# Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Performance
ENABLE_CACHING=true
CACHE_TTL_SECONDS=3600
ENABLE_COMPRESSION=true
ENABLE_HTTP2=true

# Error Reporting
ENABLE_ERROR_REPORTING=true
ERROR_REPORTING_SERVICE=sentry
SENTRY_DSN=your_staging_sentry_dsn
