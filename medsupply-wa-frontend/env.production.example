# Frontend Production Environment Configuration
# Copy this file to .env.production for production deployment

# Application Environment
REACT_APP_ENV=production

# API Configuration
REACT_APP_API_URL=https://api.your-domain.com
REACT_APP_API_TIMEOUT=10000
REACT_APP_API_RETRY_ATTEMPTS=3

# Supabase Configuration (Use your production Supabase project)
REACT_APP_SUPABASE_URL=https://your-production-project.supabase.co
REACT_APP_SUPABASE_ANON_KEY=your_production_anon_key

# Authentication Settings
REACT_APP_ENABLE_EMAIL_VERIFICATION=true
REACT_APP_SKIP_EMAIL_VERIFICATION=false
REACT_APP_ENABLE_SOCIAL_LOGIN=false
REACT_APP_SESSION_TIMEOUT=1440
REACT_APP_AUTO_LOGOUT=true

# UI/UX Settings
REACT_APP_DEBUG_MODE=false
REACT_APP_SHOW_ENV_BANNER=false
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_ERROR_REPORTING=true

# Development Settings (Disable for production)
REACT_APP_MOCK_API=false
REACT_APP_ENABLE_CONSOLE_LOGS=false

# External Services
REACT_APP_GOOGLE_ANALYTICS_ID=your_production_ga_id
REACT_APP_SENTRY_DSN=your_production_sentry_dsn

# Feature Flags
REACT_APP_ENABLE_WHATSAPP_PAYMENTS=true
REACT_APP_ENABLE_AI_CHATBOT=true
REACT_APP_ENABLE_VOICE_MESSAGES=true
REACT_APP_ENABLE_VIDEO_CALLS=false
REACT_APP_ENABLE_MULTI_LANGUAGE=true
REACT_APP_ENABLE_DARK_MODE=true
